if(CONFIG_SHL_BUILD_STATIC)
    add_library(${SHL_LIB_TARGET} STATIC ${SHL_BUILD_SRC_LST})
else()
    add_library(${SHL_LIB_TARGET} SHARED ${SHL_BUILD_SRC_LST})
endif()
